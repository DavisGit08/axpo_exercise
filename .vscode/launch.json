{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Playwright Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/@playwright/test/lib/cli.js",
        "args": ["test", "--headed", "--project=chromium"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "ENV": "TEST"
        }
      }
    ]
  }